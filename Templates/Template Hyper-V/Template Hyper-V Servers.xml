<?xml version="1.0" encoding="UTF-8"?>
<zabbix_export>
    <version>4.4</version>
    <date>2020-02-03T07:36:16Z</date>
    <groups>
        <group>
            <name>Templates/Virtualization</name>
        </group>
    </groups>
    <templates>
        <template>
            <template>Template Hyper-V Servers</template>
            <name>Template Hyper-V Servers</name>
            <description>Requirements &#13;
- Zabbix Server 4.4&#13;
- Zabbix Agent 4.4&#13;
&#13;
Version 5.0.2&#13;
 - discovery over WMI&#13;
 - no external scripts</description>
            <groups>
                <group>
                    <name>Templates/Virtualization</name>
                </group>
            </groups>
            <applications>
                <application>
                    <name>Hyper-V</name>
                </application>
                <application>
                    <name>Hyper-V CSV</name>
                </application>
                <application>
                    <name>Hyper-V VM</name>
                </application>
                <application>
                    <name>Hyper-V VM CPU</name>
                </application>
                <application>
                    <name>Hyper-V VM Memory</name>
                </application>
                <application>
                    <name>Hyper-V VM Network</name>
                </application>
            </applications>
            <items>
                <item>
                    <name>Hyper-V Hypervisor Logical Processor(_Total)</name>
                    <key>perf_counter[&quot;\Hyper-V Hypervisor Logical Processor(_Total)\% Total Run Time&quot;]</key>
                    <delay>30</delay>
                    <value_type>FLOAT</value_type>
                    <units>%</units>
                    <description>https://msdn.microsoft.com/en-us/library/cc768535%28v=bts.10%29.aspx?f=255&amp;MSPPError=-2147217396</description>
                    <applications>
                        <application>
                            <name>Hyper-V</name>
                        </application>
                    </applications>
                    <request_method>POST</request_method>
                    <triggers>
                        <trigger>
                            <expression>{min(3600)}&gt;80</expression>
                            <recovery_mode>RECOVERY_EXPRESSION</recovery_mode>
                            <recovery_expression>{min(600)}&lt;80</recovery_expression>
                            <name>Host Parent Partition CPU Utilization</name>
                            <priority>WARNING</priority>
                        </trigger>
                        <trigger>
                            <expression>{min(3600)}&gt;90</expression>
                            <recovery_mode>RECOVERY_EXPRESSION</recovery_mode>
                            <recovery_expression>{min(600)}&lt;90</recovery_expression>
                            <name>Host Parent Partition CPU Utilization</name>
                            <priority>HIGH</priority>
                        </trigger>
                    </triggers>
                </item>
                <item>
                    <name>Hyper-V Hypervisor Virtual Processor Guest (Total)</name>
                    <key>perf_counter[&quot;\Hyper-V Hypervisor Virtual Processor(_Total)\% Guest Run Time&quot;]</key>
                    <delay>30</delay>
                    <value_type>FLOAT</value_type>
                    <units>%</units>
                    <applications>
                        <application>
                            <name>Hyper-V</name>
                        </application>
                    </applications>
                    <request_method>POST</request_method>
                </item>
                <item>
                    <name>Hyper-V Hypervisor Virtual Processor Hypervisor(Total)</name>
                    <key>perf_counter[&quot;\Hyper-V Hypervisor Virtual Processor(_Total)\% Hypervisor Run Time&quot;]</key>
                    <delay>30</delay>
                    <value_type>FLOAT</value_type>
                    <units>%</units>
                    <applications>
                        <application>
                            <name>Hyper-V</name>
                        </application>
                    </applications>
                    <request_method>POST</request_method>
                </item>
                <item>
                    <name>Hyper-V Number of Logical CPUs</name>
                    <key>perf_counter[\Hyper-V Hypervisor\Logical Processors]</key>
                    <delay>30</delay>
                    <units>Core</units>
                    <applications>
                        <application>
                            <name>Hyper-V</name>
                        </application>
                    </applications>
                    <request_method>POST</request_method>
                </item>
                <item>
                    <name>Hyper-V Number of Virtual CPUs</name>
                    <key>perf_counter[\Hyper-V Hypervisor\Virtual Processors]</key>
                    <delay>30</delay>
                    <units>Core</units>
                    <applications>
                        <application>
                            <name>Hyper-V</name>
                        </application>
                    </applications>
                    <request_method>POST</request_method>
                </item>
                <item>
                    <name>Hyper-V Virtual Machine Health - Critical</name>
                    <key>perf_counter[\Hyper-V Virtual Machine Health Summary\Health Critical]</key>
                    <delay>30</delay>
                    <units>VM</units>
                    <applications>
                        <application>
                            <name>Hyper-V</name>
                        </application>
                    </applications>
                    <request_method>POST</request_method>
                    <triggers>
                        <trigger>
                            <expression>{prev()}&gt;0</expression>
                            <name>Hyper-V VM Critical state</name>
                            <priority>HIGH</priority>
                        </trigger>
                    </triggers>
                </item>
                <item>
                    <name>Hyper-V Virtual Machine Health - OK</name>
                    <key>perf_counter[\Hyper-V Virtual Machine Health Summary\Health Ok]</key>
                    <delay>30</delay>
                    <units>VM</units>
                    <applications>
                        <application>
                            <name>Hyper-V</name>
                        </application>
                    </applications>
                    <request_method>POST</request_method>
                </item>
            </items>
            <discovery_rules>
                <discovery_rule>
                    <name>Hyper-V VM</name>
                    <key>wmi.getall[&quot;root\virtualization\v2&quot;,&quot;Select ElementName from Msvm_ComputerSystem&quot;]</key>
                    <delay>1h</delay>
                    <lifetime>2d</lifetime>
                    <description>https://docs.microsoft.com/en-us/windows/win32/hyperv_v2/msvm-summaryinformation</description>
                    <item_prototypes>
                        <item_prototype>
                            <name>Status {#VMNAME}</name>
                            <type>DEPENDENT</type>
                            <key>vm.status[{#VMNAME}]</key>
                            <delay>0</delay>
                            <trends>0</trends>
                            <applications>
                                <application>
                                    <name>Hyper-V VM</name>
                                </application>
                            </applications>
                            <valuemap>
                                <name>Msvm_SummaryInformation-Heartbeat</name>
                            </valuemap>
                            <preprocessing>
                                <step>
                                    <type>JSONPATH</type>
                                    <params>$.Heartbeat</params>
                                </step>
                            </preprocessing>
                            <master_item>
                                <key>wmi.getall[root\virtualization\v2,&quot;SELECT UpTime, Heartbeat FROM Msvm_SummaryInformation WHERE elementname='{#VMNAME}'&quot;]</key>
                            </master_item>
                            <trigger_prototypes>
                                <trigger_prototype>
                                    <expression>{last()}&lt;&gt;2</expression>
                                    <name>{#VMNAME} virtual machine status - {ITEM.LASTVALUE1}</name>
                                    <priority>HIGH</priority>
                                    <manual_close>YES</manual_close>
                                </trigger_prototype>
                            </trigger_prototypes>
                        </item_prototype>
                        <item_prototype>
                            <name>Uptime {#VMNAME}</name>
                            <type>DEPENDENT</type>
                            <key>vm.uptime[{#VMNAME}]</key>
                            <delay>0</delay>
                            <trends>0</trends>
                            <units>s</units>
                            <applications>
                                <application>
                                    <name>Hyper-V VM</name>
                                </application>
                            </applications>
                            <preprocessing>
                                <step>
                                    <type>JSONPATH</type>
                                    <params>$.UpTime</params>
                                </step>
                                <step>
                                    <type>MULTIPLIER</type>
                                    <params>0.001</params>
                                </step>
                            </preprocessing>
                            <master_item>
                                <key>wmi.getall[root\virtualization\v2,&quot;SELECT UpTime, Heartbeat FROM Msvm_SummaryInformation WHERE elementname='{#VMNAME}'&quot;]</key>
                            </master_item>
                        </item_prototype>
                        <item_prototype>
                            <name>RAW data {#VMNAME}</name>
                            <key>wmi.getall[root\virtualization\v2,&quot;SELECT UpTime, Heartbeat FROM Msvm_SummaryInformation WHERE elementname='{#VMNAME}'&quot;]</key>
                            <history>0</history>
                            <trends>0</trends>
                            <value_type>TEXT</value_type>
                            <applications>
                                <application>
                                    <name>Hyper-V VM</name>
                                </application>
                            </applications>
                            <preprocessing>
                                <step>
                                    <type>TRIM</type>
                                    <params>[]</params>
                                </step>
                                <step>
                                    <type>TRIM</type>
                                    <params>[]</params>
                                </step>
                            </preprocessing>
                        </item_prototype>
                    </item_prototypes>
                    <lld_macro_paths>
                        <lld_macro_path>
                            <lld_macro>{#VMNAME}</lld_macro>
                            <path>$.ElementName</path>
                        </lld_macro_path>
                    </lld_macro_paths>
                </discovery_rule>
                <discovery_rule>
                    <name>Hyper-V VM Memory</name>
                    <key>wmi.getall[root\cimv2,SELECT Name FROM Win32_PerfRawData_BalancerStats_HyperVDynamicMemoryVM]</key>
                    <item_prototypes>
                        <item_prototype>
                            <name>Hyper-V VM Memory Pressure - {#INSTANCE}</name>
                            <key>perf_counter[\Hyper-V Dynamic Memory VM({#INSTANCE})\Average Pressure]</key>
                            <delay>5m</delay>
                            <units>%</units>
                            <applications>
                                <application>
                                    <name>Hyper-V VM Memory</name>
                                </application>
                            </applications>
                            <trigger_prototypes>
                                <trigger_prototype>
                                    <expression>{last(#10)}&gt;{$VM_MEMORY_PRESSURE_THRESHOLD}</expression>
                                    <name>High VM Memory Pressure &gt; {$VM_MEMORY_PRESSURE_THRESHOLD}% - {#INSTANCE}</name>
                                    <priority>WARNING</priority>
                                    <manual_close>YES</manual_close>
                                </trigger_prototype>
                            </trigger_prototypes>
                        </item_prototype>
                    </item_prototypes>
                    <lld_macro_paths>
                        <lld_macro_path>
                            <lld_macro>{#INSTANCE}</lld_macro>
                            <path>$.Name</path>
                        </lld_macro_path>
                    </lld_macro_paths>
                </discovery_rule>
                <discovery_rule>
                    <name>Hyper-V Cluster Shared Volumes Performance</name>
                    <key>wmi.getall[root\cimv2,SELECT Name FROM Win32_PerfRawData_CsvFsPerfProvider_ClusterCSVFS]</key>
                    <delay>1h</delay>
                    <filter>
                        <conditions>
                            <condition>
                                <macro>{#INSTANCE}</macro>
                                <value>_Total</value>
                                <operator>NOT_MATCHES_REGEX</operator>
                                <formulaid>A</formulaid>
                            </condition>
                        </conditions>
                    </filter>
                    <item_prototypes>
                        <item_prototype>
                            <name>CSV Read Latency {#INSTANCE}</name>
                            <key>perf_counter[\Cluster CSV File System({#INSTANCE})\Read Latency]</key>
                            <delay>30</delay>
                            <value_type>FLOAT</value_type>
                            <units>s</units>
                            <applications>
                                <application>
                                    <name>Hyper-V CSV</name>
                                </application>
                            </applications>
                            <request_method>POST</request_method>
                        </item_prototype>
                        <item_prototype>
                            <name>CSV Write Latency {#INSTANCE}</name>
                            <key>perf_counter[\Cluster CSV File System({#INSTANCE})\Write Latency]</key>
                            <delay>30</delay>
                            <value_type>FLOAT</value_type>
                            <units>s</units>
                            <applications>
                                <application>
                                    <name>Hyper-V CSV</name>
                                </application>
                            </applications>
                            <request_method>POST</request_method>
                        </item_prototype>
                    </item_prototypes>
                    <request_method>POST</request_method>
                    <lld_macro_paths>
                        <lld_macro_path>
                            <lld_macro>{#INSTANCE}</lld_macro>
                            <path>$.Name</path>
                        </lld_macro_path>
                    </lld_macro_paths>
                </discovery_rule>
                <discovery_rule>
                    <name>Hyper-V VM CPU</name>
                    <key>wmi.getall[root\cimv2,SELECT Name FROM Win32_PerfRawData_HvStats_HyperVHypervisorVirtualProcessor]</key>
                    <delay>1h</delay>
                    <filter>
                        <conditions>
                            <condition>
                                <macro>{#INSTANCE}</macro>
                                <value>[^_Total]</value>
                                <formulaid>A</formulaid>
                            </condition>
                        </conditions>
                    </filter>
                    <lifetime>2d</lifetime>
                    <item_prototypes>
                        <item_prototype>
                            <name>Hyper-V VM CPU - {#INSTANCE}</name>
                            <key>perf_counter[\Hyper-V Hypervisor Virtual Processor({#INSTANCE})\% Total Run Time]</key>
                            <value_type>FLOAT</value_type>
                            <applications>
                                <application>
                                    <name>Hyper-V VM CPU</name>
                                </application>
                            </applications>
                            <application_prototypes>
                                <application_prototype>
                                    <name>Virtual Machine</name>
                                </application_prototype>
                            </application_prototypes>
                            <request_method>POST</request_method>
                            <trigger_prototypes>
                                <trigger_prototype>
                                    <expression>{avg(60m)}&gt;{$VM_CPU_TRESHOLD}</expression>
                                    <name>High VM CPU Load &gt; {$VM_CPU_TRESHOLD}% - {#INSTANCE}</name>
                                    <priority>AVERAGE</priority>
                                </trigger_prototype>
                            </trigger_prototypes>
                        </item_prototype>
                    </item_prototypes>
                    <request_method>POST</request_method>
                    <lld_macro_paths>
                        <lld_macro_path>
                            <lld_macro>{#INSTANCE}</lld_macro>
                            <path>$.Name</path>
                        </lld_macro_path>
                    </lld_macro_paths>
                </discovery_rule>
                <discovery_rule>
                    <name>Hyper-V VM Network</name>
                    <key>wmi.getall[root\cimv2,SELECT Name FROM Win32_PerfRawData_NvspNicStats_HyperVVirtualNetworkAdapter]</key>
                    <delay>1h</delay>
                    <filter>
                        <conditions>
                            <condition>
                                <macro>{#INSTANCE}</macro>
                                <value>Network Adapter</value>
                                <formulaid>A</formulaid>
                            </condition>
                        </conditions>
                    </filter>
                    <lifetime>2d</lifetime>
                    <item_prototypes>
                        <item_prototype>
                            <name>Hyper-V VM Network - {#INSTANCE}</name>
                            <key>perf_counter[\Hyper-V Virtual Network Adapter({#INSTANCE})\Bytes/sec]</key>
                            <value_type>FLOAT</value_type>
                            <units>Bytes</units>
                            <applications>
                                <application>
                                    <name>Hyper-V VM Network</name>
                                </application>
                            </applications>
                            <application_prototypes>
                                <application_prototype>
                                    <name>Virtual Machine</name>
                                </application_prototype>
                            </application_prototypes>
                            <request_method>POST</request_method>
                            <trigger_prototypes>
                                <trigger_prototype>
                                    <expression>{avg(30m)}&gt;{$VM_NETWORK_TRESHOLD}</expression>
                                    <name>High VM Net &gt; {$VM_NETWORK_TRESHOLD} - {#INSTANCE}</name>
                                    <priority>WARNING</priority>
                                </trigger_prototype>
                            </trigger_prototypes>
                        </item_prototype>
                    </item_prototypes>
                    <request_method>POST</request_method>
                    <lld_macro_paths>
                        <lld_macro_path>
                            <lld_macro>{#INSTANCE}</lld_macro>
                            <path>$.Name</path>
                        </lld_macro_path>
                    </lld_macro_paths>
                </discovery_rule>
                <discovery_rule>
                    <name>Hyper-V Cluster Shared Volumes</name>
                    <key>wmi.getall[root\MSCluster,&quot;SELECT Name FROM MSCluster_ClusterSharedVolume&quot;]</key>
                    <item_prototypes>
                        <item_prototype>
                            <name>Backup State {#CSVNAME}</name>
                            <type>DEPENDENT</type>
                            <key>hyperv.csv.backupstate[{#CSVNAME}]</key>
                            <delay>0</delay>
                            <applications>
                                <application>
                                    <name>Hyper-V CSV</name>
                                </application>
                            </applications>
                            <valuemap>
                                <name>MSCluster_ClusterSharedVolume-BackupState</name>
                            </valuemap>
                            <preprocessing>
                                <step>
                                    <type>JSONPATH</type>
                                    <params>$.BackupState</params>
                                </step>
                            </preprocessing>
                            <master_item>
                                <key>wmi.getall[root\MSCluster,&quot;SELECT * FROM MSCluster_ClusterSharedVolume WHERE Name = '{#CSVNAME}'&quot;]</key>
                            </master_item>
                        </item_prototype>
                        <item_prototype>
                            <name>Fault State {#CSVNAME}</name>
                            <type>DEPENDENT</type>
                            <key>hyperv.csv.faultstate[{#CSVNAME}]</key>
                            <delay>0</delay>
                            <applications>
                                <application>
                                    <name>Hyper-V CSV</name>
                                </application>
                            </applications>
                            <valuemap>
                                <name>MSCluster_ClusterSharedVolume-FaulState</name>
                            </valuemap>
                            <preprocessing>
                                <step>
                                    <type>JSONPATH</type>
                                    <params>$.FaultState</params>
                                </step>
                            </preprocessing>
                            <master_item>
                                <key>wmi.getall[root\MSCluster,&quot;SELECT * FROM MSCluster_ClusterSharedVolume WHERE Name = '{#CSVNAME}'&quot;]</key>
                            </master_item>
                            <trigger_prototypes>
                                <trigger_prototype>
                                    <expression>{last()}&lt;&gt;0</expression>
                                    <name>{#CSVNAME} fault state - {ITEM.LASTVALUE1}</name>
                                    <manual_close>YES</manual_close>
                                </trigger_prototype>
                            </trigger_prototypes>
                        </item_prototype>
                        <item_prototype>
                            <name>RAW data {#CSVNAME}</name>
                            <key>wmi.getall[root\MSCluster,&quot;SELECT * FROM MSCluster_ClusterSharedVolume WHERE Name = '{#CSVNAME}'&quot;]</key>
                            <delay>5m</delay>
                            <history>0</history>
                            <trends>0</trends>
                            <value_type>TEXT</value_type>
                            <applications>
                                <application>
                                    <name>Hyper-V CSV</name>
                                </application>
                            </applications>
                            <preprocessing>
                                <step>
                                    <type>TRIM</type>
                                    <params>[]</params>
                                </step>
                            </preprocessing>
                        </item_prototype>
                    </item_prototypes>
                    <lld_macro_paths>
                        <lld_macro_path>
                            <lld_macro>{#CSVNAME}</lld_macro>
                            <path>$.Name</path>
                        </lld_macro_path>
                    </lld_macro_paths>
                </discovery_rule>
            </discovery_rules>
            <macros>
                <macro>
                    <macro>{$VM_CPU_TRESHOLD}</macro>
                    <value>90</value>
                    <description>Usage CPU in %</description>
                </macro>
                <macro>
                    <macro>{$VM_MEMORY_PRESSURE_THRESHOLD}</macro>
                    <value>110</value>
                    <description>Memory pressure in %</description>
                </macro>
                <macro>
                    <macro>{$VM_NETWORK_TRESHOLD}</macro>
                    <value>100M</value>
                    <description>Network usage (30minutes)</description>
                </macro>
            </macros>
        </template>
    </templates>
    <graphs>
        <graph>
            <name>Hyper-V CPU</name>
            <graph_items>
                <graph_item>
                    <drawtype>GRADIENT_LINE</drawtype>
                    <color>1A7C11</color>
                    <item>
                        <host>Template Hyper-V Servers</host>
                        <key>perf_counter[&quot;\Hyper-V Hypervisor Virtual Processor(_Total)\% Guest Run Time&quot;]</key>
                    </item>
                </graph_item>
                <graph_item>
                    <sortorder>1</sortorder>
                    <color>0000DD</color>
                    <item>
                        <host>Template Hyper-V Servers</host>
                        <key>perf_counter[&quot;\Hyper-V Hypervisor Virtual Processor(_Total)\% Hypervisor Run Time&quot;]</key>
                    </item>
                </graph_item>
            </graph_items>
        </graph>
    </graphs>
    <value_maps>
        <value_map>
            <name>MSCluster_ClusterSharedVolume-BackupState</name>
            <mappings>
                <mapping>
                    <value>0</value>
                    <newvalue>None</newvalue>
                </mapping>
                <mapping>
                    <value>1</value>
                    <newvalue>In Progress</newvalue>
                </mapping>
            </mappings>
        </value_map>
        <value_map>
            <name>MSCluster_ClusterSharedVolume-FaulState</name>
            <mappings>
                <mapping>
                    <value>0</value>
                    <newvalue>No Faults</newvalue>
                </mapping>
                <mapping>
                    <value>1</value>
                    <newvalue>Redirected Access</newvalue>
                </mapping>
                <mapping>
                    <value>2</value>
                    <newvalue>No Access</newvalue>
                </mapping>
                <mapping>
                    <value>4</value>
                    <newvalue>In Maintenance</newvalue>
                </mapping>
            </mappings>
        </value_map>
        <value_map>
            <name>Msvm_SummaryInformation-Heartbeat</name>
            <mappings>
                <mapping>
                    <value>2</value>
                    <newvalue>OK</newvalue>
                </mapping>
                <mapping>
                    <value>6</value>
                    <newvalue>Error</newvalue>
                </mapping>
                <mapping>
                    <value>12</value>
                    <newvalue>No Contact</newvalue>
                </mapping>
                <mapping>
                    <value>13</value>
                    <newvalue>Lost Communication</newvalue>
                </mapping>
            </mappings>
        </value_map>
    </value_maps>
</zabbix_export>
