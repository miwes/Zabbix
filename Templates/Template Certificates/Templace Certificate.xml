<?xml version="1.0" encoding="UTF-8"?>
<zabbix_export>
    <version>4.4</version>
    <date>2020-02-27T13:24:43Z</date>
    <groups>
        <group>
            <name>Templates/Applications</name>
        </group>
    </groups>
    <templates>
        <template>
            <template>Template Certificates</template>
            <name>Template Certificates</name>
            <groups>
                <group>
                    <name>Templates/Applications</name>
                </group>
            </groups>
            <applications>
                <application>
                    <name>Certificates</name>
                </application>
            </applications>
            <discovery_rules>
                <discovery_rule>
                    <name>Certificated expired sites</name>
                    <key>Certificated.Expired[{$SITES}]</key>
                    <delay>1h</delay>
                    <item_prototypes>
                        <item_prototype>
                            <name>Certification expired for {#URL}</name>
                            <key>Certificated.Expired[{#URL},1]</key>
                            <delay>1h</delay>
                            <value_type>FLOAT</value_type>
                            <units>Days</units>
                            <applications>
                                <application>
                                    <name>Certificates</name>
                                </application>
                            </applications>
                            <trigger_prototypes>
                                <trigger_prototype>
                                    <expression>{last()}&lt;{$SSL_EXPIRY_ERR}</expression>
                                    <name>SSL certificate on {#URL} expires in less than {$SSL_EXPIRY_WARN} days ({ITEM.VALUE} days remaining)</name>
                                    <priority>HIGH</priority>
                                    <manual_close>YES</manual_close>
                                </trigger_prototype>
                                <trigger_prototype>
                                    <expression>{last()}&lt;{$SSL_EXPIRY_WARN}</expression>
                                    <name>SSL certificate on {#URL} expires in less than {$SSL_EXPIRY_WARN} days ({ITEM.VALUE} days remaining)</name>
                                    <priority>WARNING</priority>
                                    <manual_close>YES</manual_close>
                                </trigger_prototype>
                            </trigger_prototypes>
                        </item_prototype>
                    </item_prototypes>
                </discovery_rule>
            </discovery_rules>
            <macros>
                <macro>
                    <macro>{$SITES}</macro>
                    <value>https://rds.aclab.cz;https://pasvgw01</value>
                </macro>
                <macro>
                    <macro>{$SSL_EXPIRY_ERR}</macro>
                    <value>10</value>
                </macro>
                <macro>
                    <macro>{$SSL_EXPIRY_WARN}</macro>
                    <value>30</value>
                </macro>
            </macros>
        </template>
    </templates>
</zabbix_export>
